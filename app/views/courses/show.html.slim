p#notice= notice
.row
  .large-12.columns
    h1= @course.code
    p.small= @course.description
    br
    br
.row
  .large-12.columns
    .row
      .large-12.small-12.columns
        h4 Announcements
        hr/
        = render_notes.html_safe
    br
    br
    .row
      .large-6.small-6.columns
        h4=link_to "Assignments", assignment_list_path(@course)
        hr/
        = render_assignments.html_safe
      .large-6.small-6.columns
        h4=link_to "Lectures", lecture_list_path(@course)
        hr/
        - @lectures = @course.lectures.select { |l| l.lecture_date == Date.today}
        == render partial: "courses/lectures", collection: @lectures, as: :lecture
  hr/
